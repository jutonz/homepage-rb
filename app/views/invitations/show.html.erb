<%= render(HeaderComponent.new(title: "Group Invitation")) do |c| %>
  <%= c.with_crumb("Home", home_path) %>
<% end %>

<div class="max-w-2xl mx-auto">
  <div class="bg-white rounded-lg border border-gray-200 p-8 text-center">
    <div class="mb-6">
      <% if @invitation.expired? %>
        <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-full bg-red-100 mb-4">
          <svg class="h-6 w-6 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
        <h2 class="text-2xl font-bold text-gray-900 mb-2">Invitation Expired</h2>
        <p class="text-lg text-gray-600 mb-6">
          This invitation to join <strong><%= @invitation.user_group.name %></strong> has expired.
        </p>
      <% elsif @invitation.accepted? %>
        <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-full bg-green-100 mb-4">
          <svg class="h-6 w-6 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
          </svg>
        </div>
        <h2 class="text-2xl font-bold text-gray-900 mb-2">Already a Member</h2>
        <p class="text-lg text-gray-600 mb-6">
          You're already a member of <strong><%= @invitation.user_group.name %></strong>!
        </p>
      <% else %>
        <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-full bg-blue-100 mb-4">
          <svg class="h-6 w-6 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.196-2.121M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.196-2.121M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
          </svg>
        </div>
        <h2 class="text-2xl font-bold text-gray-900 mb-2">You're Invited!</h2>
        <p class="text-lg text-gray-600">
          <strong><%= @invitation.invited_by.email %></strong> has invited you to join
          <strong><%= @invitation.user_group.name %></strong>
        </p>
      <% end %>
    </div>

    <div class="bg-gray-50 rounded-lg p-6 mb-6">
      <% unless @invitation.expired? %>
        <h3 class="text-lg font-semibold mb-4">Group Details</h3>
      <% end %>
      <div class="space-y-2 text-left">
        <div class="flex justify-between">
          <span class="font-medium text-gray-700">Group Name:</span>
          <span><%= @invitation.user_group.name %></span>
        </div>
        <div class="flex justify-between">
          <span class="font-medium text-gray-700">Invited by:</span>
          <span><%= @invitation.invited_by.email %></span>
        </div>
        <% if @invitation.expired? %>
          <div class="flex justify-between">
            <span class="font-medium text-gray-700">Expired on:</span>
            <span class="text-red-600 font-medium"><%= @invitation.expires_at.strftime("%B %d, %Y at %l:%M %p") %></span>
          </div>
        <% elsif @invitation.accepted? %>
          <div class="flex justify-between">
            <span class="font-medium text-gray-700">Accepted on:</span>
            <span class="text-green-600 font-medium"><%= @invitation.accepted_at.strftime("%B %d, %Y at %l:%M %p") %></span>
          </div>
          <div class="flex justify-between">
            <span class="font-medium text-gray-700">Current Members:</span>
            <span><%= @invitation.user_group.users_count %></span>
          </div>
        <% else %>
          <div class="flex justify-between">
            <span class="font-medium text-gray-700">Current Members:</span>
            <span><%= @invitation.user_group.users_count %></span>
          </div>
          <div class="flex justify-between">
            <span class="font-medium text-gray-700">Invitation expires:</span>
            <span><%= @invitation.expires_at.strftime("%B %d, %Y at %l:%M %p") %></span>
          </div>
        <% end %>
      </div>
    </div>

    <div class="space-y-3">
      <% if @invitation.expired? %>
        <%= render(PillComponent.new(text: "Expired", color: :red)) %>
        <p class="text-sm text-gray-500">
          Please contact <strong><%= @invitation.invited_by.email %></strong> to request a new invitation.
        </p>
      <% elsif @invitation.accepted? %>
        <%= render(PillComponent.new(text: "Member", color: :green)) %>
        <%= link_to(
          "View Group",
          user_group_path(@invitation.user_group),
          class: "inline-block w-full px-6 py-3 bg-blue-600 text-white font-medium rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500"
        ) %>
      <% else %>
        <%= button_to(
          "Accept Invitation",
          invitation_acceptance_path(@invitation.token),
          method: :post,
          class: "w-full px-6 py-3 bg-blue-600 text-white font-medium rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500"
        ) %>
        <p class="text-sm text-gray-500">
          By accepting this invitation, you'll become a member of this group.
        </p>
      <% end %>
    </div>
  </div>
</div>
