<%= render(HeaderComponent.new(
  title: "Group Invitation"
)) do |c| %>
  <%= c.with_crumb("Home", home_path) %>
<% end %>

<div class="max-w-2xl mx-auto">
  <div class="bg-white rounded-lg border border-gray-200 p-8 text-center">
    <div class="mb-6">
      <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-full bg-blue-100 mb-4">
        <svg class="h-6 w-6 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.196-2.121M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.196-2.121M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
        </svg>
      </div>
      <h2 class="text-2xl font-bold text-gray-900 mb-2">You're Invited!</h2>
      <p class="text-lg text-gray-600">
        <strong><%= @invitation.invited_by.email %></strong> has invited you to join
        <strong><%= @invitation.user_group.name %></strong>
      </p>
    </div>

    <div class="bg-gray-50 rounded-lg p-6 mb-6">
      <h3 class="text-lg font-semibold mb-4">Group Details</h3>
      <div class="space-y-2 text-left">
        <div class="flex justify-between">
          <span class="font-medium text-gray-700">Group Name:</span>
          <span><%= @invitation.user_group.name %></span>
        </div>
        <div class="flex justify-between">
          <span class="font-medium text-gray-700">Invited by:</span>
          <span><%= @invitation.invited_by.email %></span>
        </div>
        <div class="flex justify-between">
          <span class="font-medium text-gray-700">Current Members:</span>
          <span><%= @invitation.user_group.users_count %></span>
        </div>
        <div class="flex justify-between">
          <span class="font-medium text-gray-700">Invitation expires:</span>
          <span><%= @invitation.expires_at.strftime("%B %d, %Y at %l:%M %p") %></span>
        </div>
      </div>
    </div>

    <div class="space-y-3">
      <%= button_to(
        "Accept Invitation",
        invitation_acceptance_path(@invitation.token),
        method: :post,
        class: "w-full px-6 py-3 bg-blue-600 text-white font-medium rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500"
      ) %>
      
      <p class="text-sm text-gray-500">
        By accepting this invitation, you'll become a member of this group.
      </p>
    </div>
  </div>
</div>