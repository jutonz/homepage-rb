<%= render(HeaderComponent.new(
  title: "Invitation Expired"
)) do |c| %>
  <%= c.with_crumb("Home", home_path) %>
<% end %>

<div class="max-w-2xl mx-auto">
  <div class="bg-white rounded-lg border border-gray-200 p-8 text-center">
    <div class="mb-6">
      <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-full bg-red-100 mb-4">
        <svg class="h-6 w-6 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
      </div>
      <h2 class="text-2xl font-bold text-gray-900 mb-2">Invitation Expired</h2>
      <p class="text-lg text-gray-600 mb-6">
        This invitation to join <strong><%= @invitation.user_group.name %></strong> has expired.
      </p>
    </div>

    <div class="bg-gray-50 rounded-lg p-6 mb-6">
      <div class="space-y-2 text-left">
        <div class="flex justify-between">
          <span class="font-medium text-gray-700">Group Name:</span>
          <span><%= @invitation.user_group.name %></span>
        </div>
        <div class="flex justify-between">
          <span class="font-medium text-gray-700">Invited by:</span>
          <span><%= @invitation.invited_by.email %></span>
        </div>
        <div class="flex justify-between">
          <span class="font-medium text-gray-700">Expired on:</span>
          <span class="text-red-600 font-medium"><%= @invitation.expires_at.strftime("%B %d, %Y at %l:%M %p") %></span>
        </div>
      </div>
    </div>

    <div class="space-y-3">
      <%= render(PillComponent.new(
        text: "Expired",
        color: :red
      )) %>
      
      <p class="text-sm text-gray-500">
        Please contact <strong><%= @invitation.invited_by.email %></strong> to request a new invitation.
      </p>
    </div>
  </div>
</div>