<%= render(HeaderComponent.new(
  title: "Already a Member"
)) do |c| %>
  <%= c.with_crumb("Home", home_path) %>
<% end %>

<div class="max-w-2xl mx-auto">
  <div class="bg-white rounded-lg border border-gray-200 p-8 text-center">
    <div class="mb-6">
      <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-full bg-green-100 mb-4">
        <svg class="h-6 w-6 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
        </svg>
      </div>
      <h2 class="text-2xl font-bold text-gray-900 mb-2">Already a Member</h2>
      <p class="text-lg text-gray-600 mb-6">
        You're already a member of <strong><%= @invitation.user_group.name %></strong>!
      </p>
    </div>

    <div class="bg-gray-50 rounded-lg p-6 mb-6">
      <div class="space-y-2 text-left">
        <div class="flex justify-between">
          <span class="font-medium text-gray-700">Group Name:</span>
          <span><%= @invitation.user_group.name %></span>
        </div>
        <div class="flex justify-between">
          <span class="font-medium text-gray-700">Invited by:</span>
          <span><%= @invitation.invited_by.email %></span>
        </div>
        <div class="flex justify-between">
          <span class="font-medium text-gray-700">Accepted on:</span>
          <span class="text-green-600 font-medium"><%= @invitation.accepted_at.strftime("%B %d, %Y at %l:%M %p") %></span>
        </div>
        <div class="flex justify-between">
          <span class="font-medium text-gray-700">Current Members:</span>
          <span><%= @invitation.user_group.users_count %></span>
        </div>
      </div>
    </div>

    <div class="space-y-3">
      <%= render(PillComponent.new(
        text: "Member",
        color: :green
      )) %>
      
      <%= link_to(
        "View Group",
        user_group_path(@invitation.user_group),
        class: "inline-block w-full px-6 py-3 bg-blue-600 text-white font-medium rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500"
      ) %>
    </div>
  </div>
</div>