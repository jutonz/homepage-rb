<%= render(HeaderComponent.new(
  title: @gallery.name
)) do |c| %>
  <%= c.with_crumb("Home", home_path) %>
  <%= c.with_crumb("Galleries", galleries_path) %>

  <%= c.with_action do %>
    <%= link_to(
      "Add images",
      new_gallery_bulk_upload_path(@gallery),
      class: "button"
    ) %>
  <% end %>

  <%= c.with_action do %>
    <%= link_to(
      "Tags",
      gallery_tags_path(@gallery),
      class: "button ml-4"
    ) %>
  <% end %>

  <%= c.with_action do %>
    <%= link_to(
      "Edit",
      edit_gallery_path(@gallery),
      class: "button ml-4"
    ) %>
  <% end %>

  <%= c.with_action do %>
    <%= button_to(
      "Delete",
      gallery_path(@gallery),
      method: "delete",
      data: {turbo_confirm: "Are you sure?"},
      class: "button button--danger ml-4"
    ) %>
  <% end %>
<% end %>

<div class="flex flex-col gap-4 mb-20">
  <div class="grid gap-4 grid-cols-5">
    <% @images.each do |image| %>
      <%= link_to(
        gallery_image_path(@gallery, image),
        data: {role: "image", image_id: image.id}
      ) do %>
        <div>
          <%= image_tag(image.file.variant(resize_to_limit: [200, 200])) %>
        </div>
      <% end %>
    <% end %>
  </div>
  <span class="hidden only:block">
    This gallery doesn't have any images yet.
    <br />
    <%= link_to(
      "Add some",
      new_gallery_bulk_upload_path(@gallery)
    ) %>
  </span>

  <div class="flex justify-center">
    <%= paginate @images %>
  </div>
</div>
