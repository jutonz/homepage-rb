<%= simple_form_for([@gallery, @tag, @auto_add_tag]) do |form| %>
  <%= form.input(
    :auto_add_tag_id,
    collection: @tag.available_auto_add_tags.pluck(:id, :name),
    label_method: :last,
    value_method: :first,
    label: "Auto add tag",
    prompt: "Select a tag to auto-add"
  ) %>
  <%= form.button(:submit) %>
<% end %>
