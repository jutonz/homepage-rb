<%= render(HeaderComponent.new(
  title: "Galleries"
)) do |c| %>
  <%= c.with_crumb("Home", home_path) %>
  <%= c.with_action do %>
    <%= link_to(
      "New Gallery",
      new_gallery_path,
      class: "button"
    ) %>
  <% end %>
<% end %>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
  <% @galleries.each do |gallery| %>
    <%= link_to(
      gallery_path(gallery),
      data: {role: "gallery"},
      class: "block p-4 border border-gray-200 rounded-lg hover:bg-gray-50 hover:border-gray-300 transition-colors duration-200 group"
    ) do %>
      <div class="flex justify-between items-center mb-2">
        <span class="font-medium text-gray-900 group-hover:text-gray-700"><%= gallery.name %></span>
      </div>
      <div class="flex gap-2">
        <span class="text-xs text-gray-500 bg-gray-100 px-2 py-1 rounded-full"><%= gallery.images_count %> images</span>
        <span class="text-xs text-gray-500 bg-gray-100 px-2 py-1 rounded-full"><%= gallery.tags_count %> tags</span>
      </div>
    <% end %>
  <% end %>
</div>

<% if @galleries.empty? %>
  <div class="text-center py-12 text-gray-500">
    <div class="text-lg font-medium mb-2">No galleries yet</div>
    <div class="text-sm">Create your first gallery to get started organizing your images.</div>
  </div>
<% end %>
