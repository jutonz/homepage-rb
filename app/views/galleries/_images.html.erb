<div class="flex flex-col gap-4 mb-20">
  <div class="grid gap-4 grid-cols-2 sm:grid-cols-5">
    <%= render(partial: "galleries/image", collection: images) %>
    <div class="hidden only:flex flex-col col-span-full">
      <div class="text-center py-12 text-gray-500">
        <div class="text-lg font-medium mb-2">No images yet</div>
        <div class="text-sm">Images will appear here once they're added to this gallery.</div>
      </div>
    </div>
  </div>

  <div class="flex justify-center">
    <%= paginate(images) %>
  </div>
</div>
