<%= render(HeaderComponent.new(
  title: @book.name
)) do |c| %>
  <%= c.with_crumb("Home", home_path) %>
  <%= c.with_crumb("Galleries", galleries_path) %>
  <%= c.with_crumb(@gallery.name, gallery_path(@gallery)) %>
  <%= c.with_crumb("Books", gallery_books_path(@gallery)) %>

  <%= c.with_action do %>
    <%= link_to(
      "Edit",
      edit_gallery_book_path(@gallery, @book),
      class: "button"
    ) %>
  <% end %>

  <%= c.with_action do %>
    <%= button_to(
      "Delete",
      gallery_book_path(@gallery, @book),
      method: "delete",
      data: {turbo_confirm: "Are you sure?"},
      class: "button button--danger"
    ) %>
  <% end %>
<% end %>

<div class="text-center py-12 text-gray-500">
  <div class="text-lg font-medium mb-2">No images yet</div>
  <div class="text-sm">Add images to this book to get started.</div>
</div>
