<%= simple_form_for(@ingredient, url: @ingredient.persisted? ? ingredient_path(@ingredient) : ingredients_path) do |form| %>
  <%= form.input(:name, autofocus: true) %>
  <%= form.input(:category, hint: "Optional category like 'Spices', 'Dairy', 'Vegetables'") %>
  <%= form.button(:submit) %>
<% end %>