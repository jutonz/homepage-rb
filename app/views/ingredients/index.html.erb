<%= render(HeaderComponent.new(
  title: "Ingredients"
)) do |c| %>
  <%= c.with_crumb("Home", home_path) %>
  <%= c.with_action do %>
    <%= link_to(
      "Recipe Groups",
      recipe_groups_path,
      class: "button button--secondary"
    ) %>
  <% end %>
  <%= c.with_action do %>
    <%= link_to(
      "New Ingredient",
      new_ingredient_path,
      class: "button"
    ) %>
  <% end %>
<% end %>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
  <% @ingredients.each do |ingredient| %>
    <%= link_to(
      ingredient_path(ingredient),
      data: {role: "ingredient"},
      class: "block p-4 border border-gray-200 rounded-lg hover:bg-gray-50 hover:border-gray-300 transition-colors duration-200 group"
    ) do %>
      <div class="flex justify-between items-center mb-2">
        <span class="font-medium text-gray-900 group-hover:text-gray-700"><%= ingredient.name %></span>
      </div>
      <div class="flex gap-2">
        <span class="text-xs text-gray-500 bg-blue-100 px-2 py-1 rounded-full"><%= ingredient.recipes.count %> recipes</span>
      </div>
    <% end %>
  <% end %>
</div>

<% if @ingredients.empty? %>
  <div class="text-center py-12 text-gray-500">
    <div class="text-lg font-medium mb-2">No ingredients yet</div>
    <div class="text-sm">Create your first ingredient to start building your recipe library.</div>
  </div>
<% end %>
