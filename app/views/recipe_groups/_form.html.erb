<%= form_with(model: recipe_group, local: true, class: "space-y-6") do |form| %>
  <% if recipe_group.errors.any? %>
    <div class="rounded-md bg-red-50 p-4">
      <div class="flex">
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(recipe_group.errors.count, "error") %> prohibited this recipe group from being saved:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul role="list" class="list-disc space-y-1 pl-5">
              <% recipe_group.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div>
    <%= form.label(:name, class: "block text-sm font-medium text-gray-700") %>
    <%= form.text_field(
      :name,
      class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm"
    ) %>
  </div>

  <div>
    <%= form.label(:description, class: "block text-sm font-medium text-gray-700") %>
    <%= form.text_area(
      :description,
      rows: 4,
      class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm"
    ) %>
  </div>

  <% if current_user.user_groups.any? %>
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-2">Share with User Groups</label>
      <div class="space-y-2">
        <% current_user.user_groups.each do |user_group| %>
          <label class="flex items-center">
            <%= check_box_tag(
              "recipe_group[user_group_ids][]",
              user_group.id,
              recipe_group.user_groups.include?(user_group),
              class: "rounded border-gray-300 text-indigo-600 shadow-sm focus:border-indigo-500 focus:ring-indigo-500"
            ) %>
            <span class="ml-2 text-sm text-gray-700"><%= user_group.name %></span>
          </label>
        <% end %>
        <%= hidden_field_tag("recipe_group[user_group_ids][]", "") %>
      </div>
    </div>
  <% end %>

  <div class="flex justify-between">
    <%= link_to(
      "Cancel",
      recipe_group.persisted? ? recipe_group_path(recipe_group) : recipe_groups_path,
      class: "rounded-md border border-gray-300 bg-white py-2 px-4 text-sm font-medium text-gray-700 shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2"
    ) %>
    
    <div class="flex gap-2">
      <% if recipe_group.persisted? %>
        <%= link_to(
          "Delete",
          recipe_group_path(recipe_group),
          method: :delete,
          confirm: "Are you sure? This will delete all recipes in this group.",
          class: "rounded-md border border-red-300 bg-white py-2 px-4 text-sm font-medium text-red-700 shadow-sm hover:bg-red-50 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2"
        ) %>
      <% end %>
      <%= form.submit(
        recipe_group.persisted? ? "Update Recipe Group" : "Create Recipe Group",
        class: "rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2"
      ) %>
    </div>
  </div>
<% end %>