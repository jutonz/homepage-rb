<%= render(HeaderComponent.new(
  title: "#{@recipe.name} Ingredients"
)) do |c| %>
  <%= c.with_crumb("Home", home_path) %>
  <%= c.with_crumb("Recipes", recipes_path) %>
  <%= c.with_crumb(@recipe.name, recipe_path(@recipe)) %>

  <%= c.with_action do %>
    <%= link_to(
      "Add Ingredient",
      new_recipe_ingredient_path(@recipe),
      class: "button"
    ) %>
  <% end %>
<% end %>

<div class="max-w-4xl">
  <% if @recipe_ingredients.none? %>
    <div class="text-center py-12 text-gray-500">
      <div class="text-lg font-medium mb-2">No ingredients added yet</div>
      <div class="text-sm mb-4">Add ingredients to build your recipe.</div>
      <%= link_to(
        "Add First Ingredient",
        new_recipe_ingredient_path(@recipe),
        class: "button"
      ) %>
    </div>
  <% end %>

  <div class="grid grid-cols-1 gap-4">
    <% @recipe_ingredients.each do |recipe_ingredient| %>
      <div class="border border-gray-200 rounded-lg p-4" data-ingredient="<%= recipe_ingredient.ingredient.name %>">
        <div class="flex justify-between items-center">
          <div>
            <h3 class="font-medium text-gray-900">
              <%= recipe_ingredient.ingredient.name %>
            </h3>
            <div class="text-sm text-gray-600 mt-1">
              <%= recipe_ingredient.quantity %>
              <% if recipe_ingredient.unit.present? %>
                <%= recipe_ingredient.unit %>
              <% end %>
            </div>
          </div>

          <div class="flex gap-2 items-center">
            <%= link_to(
              "Edit",
              edit_recipe_ingredient_path(@recipe, recipe_ingredient),
              class: "text-sm text-blue-600 hover:text-blue-800"
            ) %>
            <%= link_to(
              "Remove",
              recipe_ingredient_path(@recipe, recipe_ingredient),
              method: :delete,
              data: {turbo_method: :delete, turbo_confirm: "Are you sure?"},
              class: "text-sm text-red-600 hover:text-red-800"
            ) %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
