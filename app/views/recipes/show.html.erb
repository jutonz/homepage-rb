<%= render(HeaderComponent.new(
  title: @recipe.name
)) do |c| %>
  <%= c.with_crumb("Home", home_path) %>
  <%= c.with_crumb("Recipes", recipes_path) %>

  <%= c.with_action do %>
    <%= link_to(
      "Ingredients",
      ingredients_path,
      class: "button button--secondary"
    ) %>
  <% end %>

  <%= c.with_action do %>
    <%= link_to(
      "Edit",
      edit_recipe_path(@recipe),
      class: "button"
    ) %>
  <% end %>

  <%= c.with_action do %>
    <%= button_to(
      "Delete",
      recipe_path(@recipe),
      method: "delete",
      data: {turbo_confirm: "Are you sure?"},
      class: "button button--danger"
    ) %>
  <% end %>
<% end %>

<div class="max-w-4xl">
  <% if @recipe.description.present? %>
    <div class="mb-6">
      <h3 class="text-lg font-medium text-gray-900 mb-2">Description</h3>
      <p class="text-gray-700"><%= @recipe.description %></p>
    </div>
  <% end %>

  <div class="mb-6">
    <div class="flex justify-between items-center mb-4">
      <h3 class="text-lg font-medium text-gray-900">Ingredients</h3>
      <%= link_to(
        "Manage Ingredients",
        recipe_ingredients_path(@recipe),
        class: "text-sm text-blue-600 hover:text-blue-800"
      ) %>
    </div>
    
    <% if @recipe.recipe_ingredients.any? %>
      <div class="bg-gray-50 p-4 rounded-lg">
        <ul class="space-y-2">
          <% @recipe.recipe_ingredients.includes(:ingredient).each do |recipe_ingredient| %>
            <li class="flex justify-between items-center">
              <span class="text-gray-900"><%= recipe_ingredient.ingredient.name %></span>
              <span class="text-gray-600">
                <%= recipe_ingredient.quantity %>
                <% if recipe_ingredient.unit.present? %>
                  <%= recipe_ingredient.unit %>
                <% end %>
              </span>
            </li>
          <% end %>
        </ul>
      </div>
    <% else %>
      <div class="bg-gray-50 p-4 rounded-lg text-center">
        <div class="text-gray-500 mb-2">No ingredients yet</div>
        <%= link_to(
          "Add First Ingredient",
          new_recipe_ingredient_path(@recipe),
          class: "text-sm text-blue-600 hover:text-blue-800"
        ) %>
      </div>
    <% end %>
  </div>

  <% if @recipe.instructions.present? %>
    <div class="mb-6">
      <h3 class="text-lg font-medium text-gray-900 mb-2">Instructions</h3>
      <div class="prose prose-gray max-w-none">
        <%= simple_format(@recipe.instructions) %>
      </div>
    </div>
  <% end %>
</div>
