<%= simple_form_for(
  [@recipe_group, @recipe], 
  url: @recipe.persisted? ? recipe_group_recipe_path(@recipe_group, @recipe) : recipe_group_recipes_path(@recipe_group)
) do |form| %>
  <%= form.input(:name, autofocus: true) %>
  <%= form.input(:description, as: :text, input_html: {rows: 3}) %>
  <%= form.rich_text_area(:instructions) %>
  <%= form.button(:submit) %>
<% end %>
