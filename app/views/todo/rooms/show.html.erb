<%= render(HeaderComponent.new(
  title: @room.name
)) do |c| %>
  <%= c.with_action do %>
    <%= link_to(
      "Edit room",
      edit_todo_room_path(@room),
      class: "button"
    ) %>
  <% end %>

  <%= c.with_action do %>
    <%= button_to(
      "Delete",
      todo_room_path(@room),
      method: "delete",
      data: {turbo_confirm: "Are you sure?"},
      class: "button button--danger ml-4"
    ) %>
  <% end %>
<% end %>
