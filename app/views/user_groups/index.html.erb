<%= render(HeaderComponent.new(
  title: "User Groups"
)) do |c| %>
  <%= c.with_crumb("Home", home_path) %>
  <%= c.with_action do %>
    <%= link_to(
      "New User Group",
      new_user_group_path,
      class: "button"
    ) %>
  <% end %>
<% end %>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
  <% @user_groups.each do |user_group| %>
    <%= link_to(
      user_group_path(user_group),
      data: {role: "user_group"},
      class: "block p-4 border border-gray-200 rounded-lg hover:bg-gray-50 hover:border-gray-300 transition-colors duration-200 group"
    ) do %>
      <div class="flex justify-between items-center mb-2">
        <span class="font-medium text-gray-900 group-hover:text-gray-700"><%= user_group.name %></span>
      </div>
      <div class="flex gap-2">
        <span class="text-xs text-gray-500 bg-gray-100 px-2 py-1 rounded-full"><%= user_group.users.count %> members</span>
      </div>
    <% end %>
  <% end %>
</div>

<% if @user_groups.empty? %>
  <div class="text-center py-12 text-gray-500">
    <div class="text-lg font-medium mb-2">No user groups yet</div>
    <div class="text-sm">Create your first user group to get started organizing users.</div>
  </div>
<% end %>
