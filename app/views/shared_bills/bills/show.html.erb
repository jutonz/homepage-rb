<%= render(HeaderComponent.new(
  title: "#{@bill.period_start.to_date} - #{@bill.period_end.to_date}"
)) do |c| %>
  <%= c.with_crumb("Home", home_path) %>
  <%= c.with_crumb("Shared Bills", shared_bills_path) %>
  <%= c.with_crumb(
    @shared_bill.name,
    shared_bill_path(@shared_bill)
  ) %>

  <%= c.with_action do %>
    <%= link_to(
      "Edit",
      edit_shared_bill_bill_path(@shared_bill, @bill),
      class: "button"
    ) %>
  <% end %>

  <%= c.with_action do %>
    <%= button_to(
      "Delete",
      shared_bill_bill_path(@shared_bill, @bill),
      method: "delete",
      data: {turbo_confirm: "Are you sure?"},
      class: "button button--danger"
    ) %>
  <% end %>
<% end %>

<div class="bg-white rounded-lg border border-gray-200 p-6">
  <p class="text-gray-500 italic">Bill details coming soon</p>
</div>
